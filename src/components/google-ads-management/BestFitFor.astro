---
interface Props {
  items: string[];
  title: string;
}

const { items, title } = Astro.props;
---

<section class="py-20 px-4 bg-gradient-to-br from-secondary/5 to-gray-50">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
    </div>
    <div class="grid md:grid-cols-2 gap-6">
      {items.map((item, index) => (
        <div class={`bg-white p-6 rounded-xl border-l-4 border-secondary ${index === items.length - 1 ? 'md:col-span-2' : ''}`}>
          <p class="text-gray-700">{item}</p>
        </div>
      ))}
    </div>
  </div>
</section>
