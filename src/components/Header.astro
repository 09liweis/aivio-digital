---
import { languages, translations } from '../i18n/index';

interface Props {
  currentLang: string;
}

const { currentLang } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
const basePath = currentLang === 'en' ? '' : `/${currentLang}`;
---

<div class="bg-primary text-white py-2">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-end items-center gap-6 text-sm">
    <a href="mailto:hello@aivio.digital" class="flex items-center gap-2 hover:text-blue-200 transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      hello@aivio.digital
    </a>
    <a href="tel:+15551234567" class="flex items-center gap-2 hover:text-blue-200 transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      +1 (555) 123-4567
    </a>
  </div>
</div>

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
    <div class="flex justify-between items-center">
      <a href={currentLang === 'en' ? '/' : '/zh'} class="text-2xl font-bold text-primary hover:text-blue-700 transition">
        Aivio Digital
      </a>
      
      <ul class="flex items-center gap-1">
        <li><a href={currentLang === 'en' ? '/' : '/zh'} class="px-3 py-2 rounded-md text-gray-700 hover:text-primary hover:bg-blue-50 transition font-medium text-sm">{t.nav.home}</a></li>
        <li><a href={`${basePath}/google-ads-audit`} class="px-3 py-2 rounded-md text-gray-700 hover:text-primary hover:bg-blue-50 transition font-medium text-sm">{t.nav.googleAdsAudit}</a></li>
        <li><a href={`${basePath}/google-ads-management`} class="px-3 py-2 rounded-md text-gray-700 hover:text-primary hover:bg-blue-50 transition font-medium text-sm">{t.nav.googleAdsManagement}</a></li>
        <li><a href={`${basePath}/case-study`} class="px-3 py-2 rounded-md text-gray-700 hover:text-primary hover:bg-blue-50 transition font-medium text-sm">{t.nav.caseStudy}</a></li>
        <li><a href={`${basePath}/about-us`} class="px-3 py-2 rounded-md text-gray-700 hover:text-primary hover:bg-blue-50 transition font-medium text-sm">{t.nav.aboutUs}</a></li>
        <li><a href={`${basePath}/blog`} class="px-3 py-2 rounded-md text-gray-700 hover:text-primary hover:bg-blue-50 transition font-medium text-sm">{t.nav.blog}</a></li>
      </ul>

      <div class="flex items-center gap-3">
        <div class="flex gap-1 items-center bg-gray-100 rounded-md p-1">
          {Object.entries(languages).map(([code, name]) => (
            <button
              data-lang={code}
              class={`px-3 py-1 rounded text-sm font-medium transition ${
                currentLang === code
                  ? 'bg-white text-primary shadow-sm'
                  : 'text-gray-600 hover:text-gray-900'
              }`}
              onclick={`switchLanguage('${code}')`}
            >
              {name}
            </button>
          ))}
        </div>
        
        <a href={`${basePath}/contact`} class="bg-primary text-white font-semibold py-2 px-5 rounded-lg hover:bg-blue-700 transition text-sm shadow-md hover:shadow-lg">
          {t.nav.getAudit}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  function switchLanguage(lang: string) {
    localStorage.setItem('lang', lang);
    const newPath = lang === 'en' ? '/' : `/${lang}`;
    window.location.href = newPath;
  }
  
  // Expose to window for onclick handlers
  (window as any).switchLanguage = switchLanguage;
</script>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
