---
import { translations } from '../i18n/index';

interface Props {
  currentLang: string;
}

const { currentLang } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
const basePath = currentLang === 'en' ? '' : `/${currentLang}`;
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900">{t.services.title}</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{t.services.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      <!-- Service Card 1 -->
      <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition border border-gray-100">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900">{t.services.audit.title}</h3>
        </div>
        <p class="text-lg font-semibold text-gray-800 mb-4">{t.services.audit.subtitle}</p>
        <p class="text-gray-600 mb-6 leading-relaxed">{t.services.audit.description}</p>
        <div class="bg-blue-50 p-4 rounded-lg mb-6">
          <p class="text-sm text-gray-700"><strong>Best for:</strong> {t.services.audit.bestFor}</p>
        </div>
        <a href={`${basePath}/google-ads-audit`} class="inline-flex items-center text-primary font-semibold hover:text-blue-700 transition">
          {t.services.audit.learnMore}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <!-- Service Card 2 -->
      <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition border border-gray-100">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900">{t.services.management.title}</h3>
        </div>
        <p class="text-lg font-semibold text-gray-800 mb-4">{t.services.management.subtitle}</p>
        <p class="text-gray-600 mb-6 leading-relaxed">{t.services.management.description}</p>
        <div class="bg-blue-50 p-4 rounded-lg mb-6">
          <p class="text-sm text-gray-700"><strong>Best for:</strong> {t.services.management.bestFor}</p>
        </div>
        <a href={`${basePath}/google-ads-management`} class="inline-flex items-center text-primary font-semibold hover:text-blue-700 transition">
          {t.services.management.learnMore}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
