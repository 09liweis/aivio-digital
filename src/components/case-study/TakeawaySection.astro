---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<section class="py-20 px-4 bg-white">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <div class="inline-block bg-gradient-to-r from-primary to-secondary text-white text-sm font-semibold px-4 py-2 rounded-full mb-6">
        Key Insight
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
    </div>
    <div class="bg-gradient-to-br from-secondary/10 to-primary/5 p-8 rounded-2xl border-l-4 border-secondary">
      <p class="text-xl text-gray-800 leading-relaxed italic">
        {description}
      </p>
    </div>
  </div>
</section>
