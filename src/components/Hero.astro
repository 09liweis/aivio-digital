---
import { translations } from '../i18n/index';

interface Props {
  currentLang: string;
}

const { currentLang } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
---

<section class="min-h-[80vh] bg-gradient-to-br from-primary to-secondary flex items-center justify-center">
  <div class="text-center text-white px-4 max-w-4xl mx-auto">
    <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">{t.hero.title}</h1>
    <p class="text-xl md:text-2xl mb-8 text-blue-100 leading-relaxed">{t.hero.subtitle}</p>
    <a href={currentLang === 'en' ? '/contact' : '/zh/contact'} class="inline-block bg-white text-primary font-bold py-4 px-8 rounded-lg hover:bg-blue-50 transition text-lg shadow-lg hover:shadow-xl">
      {t.hero.cta}
    </a>
  </div>
</section>
