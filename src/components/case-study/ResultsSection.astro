---
interface Props {
  title: string;
  points: string[];
}

const { title, points } = Astro.props;
---

<section class="py-20 px-4 bg-gradient-to-br from-green-50 to-white">
  <div class="max-w-4xl mx-auto">
    <div class="mb-12">
      <div class="inline-block bg-green-100 text-green-700 text-sm font-semibold px-4 py-2 rounded-full mb-6">
        Success Metrics
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
    </div>
    <div class="grid gap-4">
      {points.map((point) => (
        <div class="flex items-start gap-4 bg-white p-6 rounded-xl border-l-4 border-green-500 shadow-sm hover:shadow-md transition-shadow">
          <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-gray-700 leading-relaxed">{point}</p>
        </div>
      ))}
    </div>
  </div>
</section>
