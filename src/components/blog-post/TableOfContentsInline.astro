---
interface Props {
  headings?: Array<{ text: string; id: string; level: number }>;
}

const { headings = [] } = Astro.props;
---

{headings.length > 0 && (
  <nav class="toc-inline">
    <ul class="toc-list">
      {headings.map((heading) => (
        <li class={`toc-item toc-level-${heading.level}`}>
          <a href={`#${heading.id}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc-inline {
    max-height: 400px;
    overflow-y: auto;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 8px;
  }

  .toc-level-2 {
    padding-left: 0;
  }

  .toc-level-3 {
    padding-left: 16px;
  }

  .toc-level-4 {
    padding-left: 32px;
  }

  .toc-link {
    display: block;
    color: #4b5563;
    text-decoration: none;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 13px;
    transition: all 0.2s;
    border-left: 2px solid transparent;
    line-height: 1.4;
  }

  .toc-link:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
    color: #667eea;
    border-left-color: #667eea;
    padding-left: 12px;
  }

  @media (max-width: 1024px) {
    .toc-inline {
      max-height: 300px;
    }
  }
</style>
