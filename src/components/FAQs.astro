---
import { translations } from '../i18n/index';

interface Props {
  currentLang: string;
}

const { currentLang } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center text-gray-900">{t.faq.title}</h2>

    <div class="space-y-4">
      <details class="bg-white rounded-xl shadow-md overflow-hidden group">
        <summary class="p-6 cursor-pointer font-semibold text-gray-900 hover:bg-gray-50 transition flex justify-between items-center">
          {t.faq.q1.question}
          <svg class="w-5 h-5 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="px-6 pb-6 text-gray-600">
          {t.faq.q1.answer}
        </div>
      </details>

      <details class="bg-white rounded-xl shadow-md overflow-hidden group">
