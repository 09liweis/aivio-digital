---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="bg-gradient-to-br from-primary to-primaryDark py-20 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6 text-secondaryDark">
      {title}
    </h1>
    {subtitle && (
      <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-secondaryDark/40">
        {subtitle}
      </h2>
    )}
    {description && (
      <p class="text-xl text-secondaryDark/40 leading-relaxed">
        {description}
      </p>
    )}
  </div>
</section>
