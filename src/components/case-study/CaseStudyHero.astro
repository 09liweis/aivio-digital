---
interface Props {
  title: string;
  industry: string;
  location: string;
  spend: string;
  type: string;
}

const { title, industry, location, spend, type } = Astro.props;
---

<section class="bg-gradient-to-br from-primary to-primaryDark py-20 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-12 leading-tight text-secondaryDark">
      {title}
    </h1>
    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 max-w-3xl mx-auto shadow-2xl">
      <div class="grid md:grid-cols-2 gap-6 text-sm md:text-base">
        <div class="flex items-center gap-3 bg-white/5 rounded-lg p-4">
          <svg class="w-6 h-6 flex-shrink-0 text-secondaryDark/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-white font-medium">{industry}</span>
        </div>
        <div class="flex items-center gap-3 bg-white/5 rounded-lg p-4">
          <svg class="w-6 h-6 flex-shrink-0 text-secondaryDark/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0l4.244 4.243a8 8 0 010 11.314l-4.244 4.243a8 8 0 01-11.314 0z"></path>
          </svg>
          <span class="text-white font-medium">{location}</span>
        </div>
        <div class="flex items-center gap-3 bg-white/5 rounded-lg p-4">
          <svg class="w-6 h-6 flex-shrink-0 text-secondaryDark/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 3 3 3 3 .895 3 2-1.343 3-3 3m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 1v8m0 1v8m0 1v8m0 1v8"></path>
          </svg>
          <span class="text-white font-medium">{spend}</span>
        </div>
        <div class="flex items-center gap-3 bg-white/5 rounded-lg p-4">
          <svg class="w-6 h-6 flex-shrink-0 text-secondaryDark/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V9a2 2 0 012-2m6 2v2m0-2v2m0 2v2"></path>
          </svg>
          <span class="text-white font-medium">{type}</span>
        </div>
      </div>
    </div>
  </div>
</section>
