---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n';
import Hero from '../../components/Hero.astro';

const { lang } = Astro.params;
const currentLang = (lang || 'en') as 'en' | 'zh';
const currentPath = Astro.url.pathname;
const t = translations[currentLang];
const pageTitle = t.pageTitle.aboutUs;
const pageMeta = t.pageMeta.aboutUs;
const content = t.aboutUs;

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}
---

<Layout title={pageTitle} description={pageMeta.description} keywords={pageMeta.keywords} lang={currentLang} currentLang={currentLang} currentPath={currentPath}>
  <main class="min-h-screen">
    <Hero title={content.hero.title} description={content.hero.description} />

    <!-- Our Story -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          {content.ourStory.title}
        </h2>
        <p class="text-lg text-gray-700 leading-relaxed text-center">
          {content.ourStory.description}
        </p>
      </div>
    </section>

    <!-- Our Approach -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          {content.ourApproach.title}
        </h2>
        <p class="text-lg text-gray-700 mb-8 text-center">
          {content.ourApproach.description}
        </p>
        <ul class="space-y-6 text-gray-700">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ourApproach.audit}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ourApproach.strategy}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ourApproach.management}</span>
          </li>
        </ul>
        <p class="text-lg text-gray-600 mt-8 italic text-center">
          {content.ourApproach.note}
        </p>
      </div>
    </section>

    <!-- Why Clients Choose Us -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.whyChooseUs.title}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyChooseUs.expertise}
            </h3>
          </div>
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyChooseUs.transparency}
            </h3>
          </div>
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyChooseUs.personalized}
            </h3>
          </div>
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyChooseUs.results}
            </h3>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Mission -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          {content.ourMission.title}
        </h2>
        <p class="text-xl text-gray-700 leading-relaxed text-center">
          {content.ourMission.description}
        </p>
      </div>
    </section>

    <!-- Ready CTA -->
    <section class="py-20 px-4 bg-gradient-to-br from-primary to-primaryDark text-white">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          {content.ready.title}
        </h2>
        <p class="text-xl text-secondaryDark/40 mb-8">
          {content.ready.description}
        </p>
        <a
          href={`mailto:hello@aivio.digital?subject=Talk to Google Ads Expert`}
          class="inline-block bg-white text-secondary font-semibold px-8 py-4 rounded-lg hover:bg-secondary/10 transition-colors text-lg shadow-md hover:shadow-lg"
        >
          {content.ready.button}
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 100%;
  }
</style>
