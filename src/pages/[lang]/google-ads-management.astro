---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n';
import Hero from '../../components/Hero.astro';
import FeatureCards from '../../components/google-ads-management/FeatureCards.astro';
import ProcessCards from '../../components/google-ads-management/ProcessCards.astro';
import PricingCard from '../../components/google-ads-management/PricingCard.astro';
import BestFitFor from '../../components/google-ads-management/BestFitFor.astro';
import CTASection from '../../components/google-ads-management/CTASection.astro';
import FAQSection from '../../components/google-ads-management/FAQSection.astro';

const { lang } = Astro.params;
const currentLang = (lang || 'en') as 'en' | 'zh';
const currentPath = Astro.url.pathname;
const t = translations[currentLang];
const pageTitle = t.pageTitle.googleAdsManagement;
const pageMeta = t.pageMeta.googleAdsManagement;
const content = t.googleAdsManagement;

const whyWorkItems = [
  {
    icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
    title: content.whyWorkWithUs.management.title,
    description: content.whyWorkWithUs.management.description,
  },
  {
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
    title: content.whyWorkWithUs.strategy.title,
    description: content.whyWorkWithUs.strategy.description,
  },
  {
    icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
    title: content.whyWorkWithUs.conversion.title,
    description: content.whyWorkWithUs.conversion.description,
  },
  {
    icon: 'M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
    title: content.whyWorkWithUs.reporting.title,
    description: content.whyWorkWithUs.reporting.description,
  },
];

const howWeManageItems = [
  {
    icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z',
    title: content.howWeManage.structure.title,
    description: content.howWeManage.structure.description,
  },
  {
    icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 1v8m0 1v8m0 1v8m0 1v8',
    title: content.howWeManage.bidding.title,
    description: content.howWeManage.bidding.description,
  },
  {
    icon: 'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z',
    title: content.howWeManage.adCopy.title,
    description: content.howWeManage.adCopy.description,
  },
  {
    icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
    title: content.howWeManage.monitoring.title,
    description: content.howWeManage.monitoring.description,
  },
  {
    icon: 'M13 10V3L4 14h7v7l9-11h-7z',
    title: content.howWeManage.optimization.title,
    description: content.howWeManage.optimization.description,
  },
];

const oneTimeSetupItems = [
  content.oneTimeSetup.point1,
  content.oneTimeSetup.point2,
  content.oneTimeSetup.point3,
  content.oneTimeSetup.point4,
  content.oneTimeSetup.point5,
  content.oneTimeSetup.point6,
];

const ongoingManagementItems = [
  content.ongoingManagement.point1,
  content.ongoingManagement.point2,
  content.ongoingManagement.point3,
  content.ongoingManagement.point4,
  content.ongoingManagement.point5,
];

const bestFitItems = [
  content.bestFitFor.point1,
  content.bestFitFor.point2,
  content.bestFitFor.point3,
  content.bestFitFor.point4,
  content.bestFitFor.point5,
];

const faqItems = [
  { question: content.faq.q1.question, answer: content.faq.q1.answer },
  { question: content.faq.q2.question, answer: content.faq.q2.answer },
  { question: content.faq.q3.question, answer: content.faq.q3.answer },
  { question: content.faq.q4.question, answer: content.faq.q4.answer },
  { question: content.faq.q5.question, answer: content.faq.q5.answer },
  { question: content.faq.q6.question, answer: content.faq.q6.answer },
];

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}
---

<Layout title={pageTitle} description={pageMeta.description} keywords={pageMeta.keywords} lang={currentLang} currentLang={currentLang} currentPath={currentPath}>
  <main class="min-h-screen">
    <Hero
      title={content.hero.title}
      subtitle={content.hero.subtitle}
      description={content.hero.description}
      image="/assets/google_ads_management.png"
    />

    <FeatureCards
      items={whyWorkItems}
      title={content.whyWorkWithUs.title}
      subtitle="We're different because we focus on what actually works for your business"
    />

    <ProcessCards
      items={howWeManageItems}
      title={content.howWeManage.title}
      subtitle="A systematic approach to managing your campaigns"
    />

    <section class="py-20 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Clear Pricing Structure
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Two options depending on where you are in your Google Ads journey
          </p>
        </div>
        <div class="grid md:grid-cols-2 gap-8">
          <PricingCard
            title={content.oneTimeSetup.title}
            subtitle={content.oneTimeSetup.description}
            badge="For New Accounts"
            badgeColor="primary"
            items={oneTimeSetupItems}
            note={content.oneTimeSetup.note}
          />
          <PricingCard
            title={content.ongoingManagement.title}
            subtitle={content.ongoingManagement.description}
            badge="Monthly Service"
            badgeColor="secondary"
            items={ongoingManagementItems}
          />
        </div>
      </div>
    </section>

    <BestFitFor
      items={bestFitItems}
      title={content.bestFitFor.title}
    />

    <CTASection
      title={content.notSure.title}
      subtitle={content.notSure.description}
      buttonText={content.notSure.button}
    />

    <FAQSection
      items={faqItems}
      title={content.faq.title}
    />
  </main>
</Layout>

<style>
  main {
    width: 100%;
  }
  details > summary {
    list-style: none;
  }
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
