---
interface BlogPost {
  id: string;
  title: string;
  excerpt: string;
  date: string;
  category: string;
  image: string;
}

interface Props {
  posts: BlogPost[];
  currentLang: 'en' | 'zh';
  readMoreText: string;
}

const { posts, currentLang, readMoreText } = Astro.props;
---

<section class="py-20 px-4 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <article class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100">
          <!-- Image placeholder with gradient -->
          <div class="h-52 bg-gradient-to-br from-primary to-secondaryDark flex items-center justify-center relative overflow-hidden">
            <div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-colors"></div>
            <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>

          <div class="p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-xs font-semibold text-white bg-gradient-to-r from-secondary to-secondaryDark px-3 py-1.5 rounded-full shadow-sm">
                {post.category}
              </span>
              <span class="text-xs text-gray-500 font-medium flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {post.date}
              </span>
            </div>

            <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-secondary transition-colors line-clamp-2">
              {post.title}
            </h2>

            <p class="text-gray-600 mb-6 line-clamp-3 leading-relaxed">
              {post.excerpt}
            </p>

            <a
              href={`/${currentLang === 'en' ? 'blogs' : 'blogs'}/${post.id}`}
              class="inline-flex items-center text-secondary font-semibold hover:text-secondaryDark transition-all duration-300 group/btn"
            >
              {readMoreText}
              <svg class="w-4 h-4 ml-2 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
