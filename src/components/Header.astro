---
import { languages, translations } from '../i18n/index';
import { getHeaderMenuItems } from '../utils/menuItems';

interface Props {
  currentLang: string;
  currentPath?: string;
}

const { currentLang, currentPath = '/' } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
const menuItems = getHeaderMenuItems(currentLang);

const isActive = (href: string) => {
  return currentPath.startsWith(href);
};
---
<div class="bg-secondary text-white py-2">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-end items-center gap-6 text-sm">
    <a href="mailto:hello@aivio.digital" class="flex items-center gap-2 hover:text-secondaryDark/30 transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      hello@aivio.digital
    </a>
    <a href="tel:+15551234567" class="flex items-center gap-2 hover:text-secondaryDark/30 transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      +1 (555) 123-4567
    </a>
  </div>
</div>

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
    <div class="flex justify-between items-center">
      <a href={currentLang === 'en' ? '/en' : '/zh'} class="text-2xl font-bold text-secondary hover:text-secondaryDark transition">
        Aivio Digital
      </a>
      
      <ul class="flex items-center gap-1">
        {menuItems.map(item => (
          <li>
            <a
              href={item.href}
              class={`px-3 py-2 rounded-md font-medium text-sm transition ${
                isActive(item.href)
                  ? 'text-secondary bg-secondary/10'
                  : 'text-gray-700 hover:text-secondary hover:bg-secondary/10'
              }`}
            >
              {t.nav[item.key as keyof typeof t.nav]}
            </a>
          </li>
        ))}
      </ul>

      <div class="flex items-center gap-3">
        <div class="flex gap-1 items-center bg-gray-100 rounded-md p-1">
          {Object.entries(languages).map(([code, name]) => (
            <button
              data-lang={code}
              class={`px-3 py-1 rounded text-sm font-medium transition ${
                currentLang === code
                  ? 'bg-white text-secondary shadow-sm'
                  : 'text-gray-600 hover:text-gray-900'
              }`}
              onclick={`switchLanguage('${code}')`}
            >
              {name}
            </button>
          ))}
        </div>

        <a href={currentLang === 'en' ? '/contact' : '/zh/contact'} class="bg-secondary text-white font-semibold py-2 px-5 rounded-lg hover:bg-secondaryDark transition text-sm shadow-md hover:shadow-lg">
          {t.nav.getAudit}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  function switchLanguage(lang: string) {
    localStorage.setItem('lang', lang);
    const newPath = lang === 'en' ? '/' : `/${lang}`;
    window.location.href = newPath;
  }
  
  // Expose to window for onclick handlers
  (window as any).switchLanguage = switchLanguage;
</script>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
