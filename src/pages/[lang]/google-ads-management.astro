---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n';
import Hero from '../../components/Hero.astro';

const { lang } = Astro.params;
const currentLang = (lang || 'en') as 'en' | 'zh';
const currentPath = Astro.url.pathname;
const t = translations[currentLang];
const pageTitle = t.pageTitle.googleAdsManagement;
const pageMeta = t.pageMeta.googleAdsManagement;
const content = t.googleAdsManagement;

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}
---

<Layout title={pageTitle} description={pageMeta.description} keywords={pageMeta.keywords} lang={currentLang} currentLang={currentLang} currentPath={currentPath}>
  <main class="min-h-screen">
    <Hero title={content.hero.title} subtitle={content.hero.subtitle} description={content.hero.description} />

    <!-- Why Work With Us -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.whyWorkWithUs.title}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyWorkWithUs.management.title}
            </h3>
            <p class="text-gray-700">
              {content.whyWorkWithUs.management.description}
            </p>
          </div>
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyWorkWithUs.strategy.title}
            </h3>
            <p class="text-gray-700">
              {content.whyWorkWithUs.strategy.description}
            </p>
          </div>
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyWorkWithUs.conversion.title}
            </h3>
            <p class="text-gray-700">
              {content.whyWorkWithUs.conversion.description}
            </p>
          </div>
          <div class="bg-secondary/10 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whyWorkWithUs.reporting.title}
            </h3>
            <p class="text-gray-700">
              {content.whyWorkWithUs.reporting.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- How We Manage -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.howWeManage.title}
        </h2>
        <div class="space-y-6">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {content.howWeManage.structure.title}
            </h3>
            <p class="text-gray-700">
              {content.howWeManage.structure.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {content.howWeManage.bidding.title}
            </h3>
            <p class="text-gray-700">
              {content.howWeManage.bidding.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {content.howWeManage.adCopy.title}
            </h3>
            <p class="text-gray-700">
              {content.howWeManage.adCopy.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {content.howWeManage.monitoring.title}
            </h3>
            <p class="text-gray-700">
              {content.howWeManage.monitoring.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {content.howWeManage.optimization.title}
            </h3>
            <p class="text-gray-700">
              {content.howWeManage.optimization.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- One-Time Setup -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-center">
          {content.oneTimeSetup.title}
        </h2>
        <p class="text-lg text-secondary font-semibold mb-4 text-center">
          {content.oneTimeSetup.subtitle}
        </p>
        <p class="text-gray-700 mb-8 text-center">
          {content.oneTimeSetup.description}
        </p>
        <h3 class="text-xl font-semibold text-gray-900 mb-6 text-center">
          {content.oneTimeSetup.includesTitle}
        </h3>
        <ul class="space-y-3 text-gray-700 max-w-2xl mx-auto">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.oneTimeSetup.point1}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.oneTimeSetup.point2}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.oneTimeSetup.point3}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.oneTimeSetup.point4}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.oneTimeSetup.point5}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.oneTimeSetup.point6}</span>
          </li>
        </ul>
        <p class="text-lg text-gray-600 mt-8 text-center italic">
          {content.oneTimeSetup.note}
        </p>
      </div>
    </section>

    <!-- Ongoing Management -->
    <section class="py-16 px-4 bg-secondary/10">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-center">
          {content.ongoingManagement.title}
        </h2>
        <p class="text-lg text-secondary font-semibold mb-4 text-center">
          {content.ongoingManagement.subtitle}
        </p>
        <p class="text-gray-700 mb-8 text-center">
          {content.ongoingManagement.description}
        </p>
        <h3 class="text-xl font-semibold text-gray-900 mb-6 text-center">
          {content.ongoingManagement.includesTitle}
        </h3>
        <ul class="space-y-3 text-gray-700 max-w-2xl mx-auto">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ongoingManagement.point1}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ongoingManagement.point2}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ongoingManagement.point3}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ongoingManagement.point4}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.ongoingManagement.point5}</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- Best Fit For -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          {content.bestFitFor.title}
        </h2>
        <ul class="space-y-4 text-gray-700 max-w-2xl mx-auto">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point1}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point2}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point3}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point4}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point5}</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- Not Sure Where to Start -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          {content.notSure.title}
        </h2>
        <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
          {content.notSure.description}
        </p>
        <a
          href={`mailto:hello@aivio.digital?subject=Google Ads Audit Request`}
          class="inline-block bg-secondary text-white font-semibold px-8 py-4 rounded-lg hover:bg-secondaryDark transition-colors text-lg shadow-md hover:shadow-lg"
        >
          {content.notSure.button}
        </a>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.faq.title}
        </h2>
        <div class="space-y-6">
          <details class="bg-gray-50 rounded-lg p-6 cursor-pointer">
            <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
              {content.faq.q1.question}
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-gray-700">
              {content.faq.q1.answer}
            </p>
          </details>
          <details class="bg-gray-50 rounded-lg p-6 cursor-pointer">
            <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
              {content.faq.q2.question}
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-gray-700">
              {content.faq.q2.answer}
            </p>
          </details>
          <details class="bg-gray-50 rounded-lg p-6 cursor-pointer">
            <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
              {content.faq.q3.question}
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-gray-700">
              {content.faq.q3.answer}
            </p>
          </details>
          <details class="bg-gray-50 rounded-lg p-6 cursor-pointer">
            <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
              {content.faq.q4.question}
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-gray-700">
              {content.faq.q4.answer}
            </p>
          </details>
          <details class="bg-gray-50 rounded-lg p-6 cursor-pointer">
            <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
              {content.faq.q5.question}
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-gray-700">
              {content.faq.q5.answer}
            </p>
          </details>
          <details class="bg-gray-50 rounded-lg p-6 cursor-pointer">
            <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
              {content.faq.q6.question}
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <p class="mt-4 text-gray-700">
              {content.faq.q6.answer}
            </p>
          </details>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 100%;
  }
  details > summary {
    list-style: none;
  }
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
