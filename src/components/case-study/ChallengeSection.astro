---
interface Props {
  title: string;
  points: string[];
}

const { title, points } = Astro.props;
---

<section class="py-20 px-4 bg-gradient-to-br from-red-50 to-white">
  <div class="max-w-4xl mx-auto">
    <div class="mb-12">
      <div class="inline-block bg-red-100 text-red-700 text-sm font-semibold px-4 py-2 rounded-full mb-6">
        Problem Identification
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
    </div>
    <div class="space-y-4">
      {points.map((point) => (
        <div class="flex items-start gap-4 bg-white p-6 rounded-xl border-l-4 border-red-400 shadow-sm hover:shadow-md transition-shadow">
          <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <p class="text-gray-700 leading-relaxed">{point}</p>
        </div>
      ))}
    </div>
  </div>
</section>
