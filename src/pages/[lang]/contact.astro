---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n';

const { lang } = Astro.params;
const currentLang = (lang || 'en') as 'en' | 'zh';
const currentPath = Astro.url.pathname;
const t = translations[currentLang];
const pageTitle = t.pageTitle.contactUs;
const pageMeta = t.pageMeta.contactUs;
const content = t.contactUs;

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}
---

<Layout title={pageTitle} description={pageMeta.description} keywords={pageMeta.keywords} lang={currentLang} currentLang={currentLang} currentPath={currentPath}>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {content.hero.title}
        </h1>
        <p class="text-xl text-blue-100 leading-relaxed">
          {content.hero.description}
        </p>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.howItWorks.title}
        </h2>
        <div class="space-y-8">
          <div class="flex gap-6">
            <span class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold">1</span>
            <div>
              <p class="text-lg text-gray-700 leading-relaxed">
                {content.howItWorks.step1}
              </p>
            </div>
          </div>
          <div class="flex gap-6">
            <span class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold">2</span>
            <div>
              <p class="text-lg text-gray-700 leading-relaxed">
                {content.howItWorks.step2}
              </p>
            </div>
          </div>
          <div class="flex gap-6">
            <span class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold">3</span>
            <div>
              <p class="text-lg text-gray-700 leading-relaxed">
                {content.howItWorks.step3}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services & Pricing -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.servicesPricing.title}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              {content.servicesPricing.audit.title}
            </h3>
            <p class="text-gray-700 leading-relaxed mb-4">
              {content.servicesPricing.audit.description}
            </p>
          </div>
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              {content.servicesPricing.management.title}
            </h3>
            <p class="text-gray-700 leading-relaxed mb-4">
              {content.servicesPricing.management.description}
            </p>
          </div>
        </div>
        <div class="mt-8 bg-blue-50 p-6 rounded-lg text-center">
          <p class="text-lg text-gray-700">
            {content.servicesPricing.both}
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-center">
          {content.form.title}
        </h2>
        <p class="text-lg text-gray-600 mb-8 text-center">
          {content.form.description}
        </p>
        
        <form 
          action="https://formsubmit.co/hello@aivio.digital" 
          method="POST"
          class="space-y-6"
        >
          <div>
            <label for="fullName" class="block text-sm font-medium text-gray-700 mb-2">
              {content.form.fullName}
            </label>
            <input
              type="text"
              id="fullName"
              name="fullName"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
              placeholder="John Doe"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              {content.form.email}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
              placeholder="john@example.com"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              {content.form.phone}
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
              placeholder="+1 (555) 123-4567"
            />
          </div>
          
          <div>
            <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
              {content.form.company}
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
              placeholder="Your Company"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              {content.form.message}
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition resize-vertical"
              placeholder="Tell us about your current ad spend, campaign goals, or any questions..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-blue-600 text-white font-semibold py-4 px-8 rounded-lg hover:bg-blue-700 transition-colors text-lg shadow-md hover:shadow-lg"
          >
            {content.form.submit}
          </button>
        </form>
      </div>
    </section>

    <!-- After You Submit -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-center">
          {content.afterSubmit.title}
        </h2>
        <p class="text-lg text-gray-700 mb-8 text-center">
          {content.afterSubmit.description}
        </p>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.afterSubmit.auditNote}
            </h3>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.afterSubmit.managementNote}
            </h3>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 100%;
  }
</style>
