---
interface Props {
  title: string;
  description: string;
  items: string[];
  note?: string;
}

const { title, description, items, note } = Astro.props;
---

<section class="py-20 px-4 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {description}
      </p>
    </div>
    <div class="space-y-6 mb-12">
      {items.map((item) => (
        <div class="bg-white p-6 rounded-xl border-l-4 border-secondary shadow-sm hover:shadow-md transition-shadow">
          <p class="text-gray-700 leading-relaxed">{item}</p>
        </div>
      ))}
    </div>
    {note && (
      <div class="bg-gradient-to-r from-primary/10 to-secondary/10 p-6 rounded-xl text-center">
        <p class="text-lg text-gray-600 italic">
          {note}
        </p>
      </div>
    )}
  </div>
</section>
