---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { translations } from '../i18n';

const currentLang: 'en' | 'zh' = 'en';
const currentPath = '/404';
const t = translations[currentLang];
const pageTitle = '404 | Page Not Found';
const pageMeta = {
  description: 'The page you are looking for does not exist. Return to the homepage.',
  keywords: '404, page not found, error',
};
---

<Layout title={pageTitle} description={pageMeta.description} keywords={pageMeta.keywords} lang={currentLang} currentLang={currentLang} currentPath={currentPath}>
  <main class="min-h-screen">
    <Hero 
      title="404 - Page Not Found" 
      description="Oops! The page you're looking for doesn't exist."
    />

    <!-- 404 Illustration Section -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-8">
          <svg class="w-64 h-64 mx-auto text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          We couldn't find that page
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          The page you're looking for may have been moved, deleted, or never existed in the first place. Don't worry though, we're here to help!
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/en"
            class="inline-block bg-secondary text-white font-semibold px-8 py-4 rounded-lg hover:bg-secondaryDark transition-colors text-lg shadow-md hover:shadow-lg"
          >
            Go to Homepage
          </a>
          <a
            href="mailto:hello@aivio.digital?subject=Help finding page"
            class="inline-block bg-white text-secondary border-2 border-secondary font-semibold px-8 py-4 rounded-lg hover:bg-secondary/10 transition-colors text-lg"
          >
            Contact Us
          </a>
        </div>
      </div>
    </section>

    <!-- Helpful Links Section -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">
          Here are some helpful links
        </h3>
        <div class="grid md:grid-cols-2 gap-6">
          <a
            href="/en/google-ads-audit"
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 group"
          >
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center group-hover:bg-secondary/20 transition-colors">
                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">Google Ads Audit</h4>
                <p class="text-sm text-gray-600">Find wasted spend and optimize your campaigns</p>
              </div>
            </div>
          </a>

          <a
            href="/en/google-ads-management"
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 group"
          >
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center group-hover:bg-secondary/20 transition-colors">
                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">Google Ads Management</h4>
                <p class="text-sm text-gray-600">Turn ad spend into qualified leads</p>
              </div>
            </div>
          </a>

          <a
            href="/en/case-study"
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 group"
          >
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center group-hover:bg-secondary/20 transition-colors">
                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">Case Study</h4>
                <p class="text-sm text-gray-600">See our success stories and results</p>
              </div>
            </div>
          </a>

          <a
            href="/en/about-us"
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 group"
          >
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center group-hover:bg-secondary/20 transition-colors">
                <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">About Us</h4>
                <p class="text-sm text-gray-600">Learn more about our team and approach</p>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4 bg-gradient-to-br from-primary to-primaryDark">
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="text-3xl md:text-4xl font-bold text-secondaryDark mb-6">
          Need help with Google Ads?
        </h3>
        <p class="text-xl text-secondaryDark/60 mb-8">
          Let's discuss how we can help grow your business with expert Google Ads management.
        </p>
        <a
          href="mailto:hello@aivio.digital?subject=Google Ads Consultation"
          class="inline-block bg-white text-secondary font-semibold px-8 py-4 rounded-lg hover:bg-secondary/10 transition-colors text-lg shadow-md hover:shadow-lg"
        >
          Get in Touch
        </a>
      </div>
    </section>
  </main>
</Layout>
