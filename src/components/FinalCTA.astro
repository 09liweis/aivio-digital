---
import { translations } from '../i18n/index';

interface Props {
  currentLang: string;
}

const { currentLang } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
---

<section class="py-20 bg-gradient-to-br from-primary to-secondary">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">{t.finalCta.title}</h2>
    <p class="text-xl mb-10 text-blue-100">{t.finalCta.subtitle}</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href={currentLang === 'en' ? '/contact' : '/zh/contact'} class="bg-white text-primary font-bold py-4 px-8 rounded-lg hover:bg-blue-50 transition text-lg shadow-lg hover:shadow-xl">
        {t.finalCta.button}
      </a>
      <a href="tel:6476251375" class="text-white font-semibold text-lg hover:text-blue-200 transition flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        {t.finalCta.orCall}
      </a>
    </div>
  </div>
</section>
