---
interface Props {
  items: Array<{
    question: string;
    answer: string;
  }>;
  title: string;
}

const { items, title } = Astro.props;
---

<section class="py-20 px-4 bg-white">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
    </div>
    <div class="space-y-4">
      {items.map((item) => (
        <details class="bg-gradient-to-r from-gray-50 to-white rounded-xl p-6 cursor-pointer border border-gray-200 hover:border-secondary/30 transition-all">
          <summary class="text-lg font-semibold text-gray-900 flex justify-between items-center">
            {item.question}
            <svg class="w-5 h-5 text-secondary flex-shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <p class="mt-4 text-gray-600 leading-relaxed">
            {item.answer}
          </p>
        </details>
      ))}
    </div>
  </div>
</section>
