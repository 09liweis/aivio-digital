---
interface Props {
  items: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
  title: string;
  subtitle?: string;
}

const { items, title, subtitle } = Astro.props;
---

<section class="py-20 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
      {subtitle && (
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {subtitle}
        </p>
      )}
    </div>
    <div class="grid md:grid-cols-2 gap-8">
      {items.map((item) => (
        <div class="bg-gradient-to-br from-secondary/5 to-white p-8 rounded-xl border border-secondary/20 hover:border-secondary/40 transition-all duration-300 group">
          <div class="w-14 h-14 bg-gradient-to-br from-secondary to-secondaryDark rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon}></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {item.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
