---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  contactLink: string;
}

const { title, description, buttonText, contactLink } = Astro.props;
---

<section class="py-20 px-4 bg-gradient-to-br from-primary to-primaryDark">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-6 text-secondaryDark">
      {title}
    </h2>
    <p class="text-xl text-secondaryDark/40 mb-10 max-w-2xl mx-auto leading-relaxed">
      {description}
    </p>
    <a
      href={contactLink}
      class="inline-block bg-white text-secondary font-semibold px-10 py-4 rounded-lg hover:bg-secondary/10 transition-all duration-300 text-lg shadow-lg hover:shadow-xl"
    >
      {buttonText}
    </a>
  </div>
</section>
