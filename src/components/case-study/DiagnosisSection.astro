---
interface Props {
  title: string;
  description: string;
  items: Array<{
    title: string;
    description: string;
  }>;
}

const { title, description, items } = Astro.props;
---

<section class="py-20 px-4 bg-white">
  <div class="max-w-4xl mx-auto">
    <div class="mb-12">
      <div class="inline-block bg-secondary/10 text-secondary text-sm font-semibold px-4 py-2 rounded-full mb-6">
        Audit Findings
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl">
        {description}
      </p>
    </div>
    <div class="space-y-6">
      {items.map((item, index) => (
        <div class="bg-gradient-to-br from-gray-50 to-white p-8 rounded-xl border-2 border-secondary/20 hover:border-secondary/40 transition-all duration-300">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-gradient-to-br from-secondary to-secondaryDark rounded-lg flex items-center justify-center flex-shrink-0">
              <span class="text-white font-bold text-xl">{index + 1}</span>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-3">
                {item.title}
              </h3>
              <p class="text-gray-700 leading-relaxed">
                {item.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
