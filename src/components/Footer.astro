---
import { translations } from '../i18n/index';
import { getMenuItems } from '../utils/menuItems';

interface Props {
  currentLang: string;
  currentPath?: string;
}

const { currentLang } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
const currentYear = new Date().getFullYear();
const menuItems = getMenuItems(currentLang);
const copyrightText = t.footer.copyright.replace('{year}', String(currentYear));
---

<footer class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.about}</h3>
        <p class="text-gray-400">{t.footer.aboutText}</p>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.quickLinks}</h3>
        <ul class="space-y-2 text-gray-400">
          {menuItems.map(link => (
            <li><a href={link.href} class="hover:text-white transition">{t.nav[link.key]}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">{t.footer.contact}</h3>
        <p class="text-gray-400">{t.footer.email}: hello@aivio.digital</p>
        <p class="text-gray-400">{t.footer.phone}: 647-625-1375</p>
        <div class="mt-4 flex gap-4">
          <div class="text-center">
            <img src="/assets/company_QR_code.png" alt="Company QR Code" class="w-24 h-24 rounded-lg mb-2" />
            <p class="text-xs text-gray-500">Company</p>
          </div>
          <div class="text-center">
            <img src="/assets/WeChat_QR_Code.jpg" alt="WeChat QR Code" class="w-24 h-24 rounded-lg mb-2" />
            <p class="text-xs text-gray-500">Wechat</p>
          </div>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-800 pt-8 text-center text-gray-400">
      <p>{copyrightText}</p>
    </div>
  </div>
</footer>
