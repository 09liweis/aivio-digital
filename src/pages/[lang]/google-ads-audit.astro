---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n';

const { lang } = Astro.params;
const currentLang = (lang || 'en') as 'en' | 'zh';
const currentPath = Astro.url.pathname;
const t = translations[currentLang];
const pageTitle = t.pageTitle.googleAdsAudit;
const pageMeta = t.pageMeta.googleAdsAudit;
const content = t.googleAdsAudit;

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}
---

<Layout title={pageTitle} description={pageMeta.description} keywords={pageMeta.keywords} lang={currentLang} currentLang={currentLang} currentPath={currentPath}>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary to-primaryDark text-white py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {content.hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-secondaryDark/40 leading-relaxed">
          {content.hero.subtitle}
        </p>
      </div>
    </section>

    <!-- Why Audit Matters -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-center">
          {content.whyAuditMatters.title}
        </h2>
        <p class="text-lg text-gray-600 mb-8 text-center">
          {content.whyAuditMatters.subtitle}
        </p>
        <ul class="space-y-4 text-gray-700">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whyAuditMatters.point1}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whyAuditMatters.point2}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whyAuditMatters.point3}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whyAuditMatters.point4}</span>
          </li>
        </ul>
        <p class="text-lg text-gray-700 mt-8 italic text-center">
          {content.whyAuditMatters.conclusion}
        </p>
      </div>
    </section>

    <!-- What We Review -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">
          {content.whatWeReview.title}
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whatWeReview.structure.title}
            </h3>
            <p class="text-gray-600">
              {content.whatWeReview.structure.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whatWeReview.keywords.title}
            </h3>
            <p class="text-gray-600">
              {content.whatWeReview.keywords.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whatWeReview.bidding.title}
            </h3>
            <p class="text-gray-600">
              {content.whatWeReview.bidding.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whatWeReview.adCopy.title}
            </h3>
            <p class="text-gray-600">
              {content.whatWeReview.adCopy.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whatWeReview.tracking.title}
            </h3>
            <p class="text-gray-600">
              {content.whatWeReview.tracking.description}
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {content.whatWeReview.landingPage.title}
            </h3>
            <p class="text-gray-600">
              {content.whatWeReview.landingPage.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- What You Receive -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          {content.whatYouReceive.title}
        </h2>
        <ul class="space-y-4 text-gray-700">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whatYouReceive.point1}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whatYouReceive.point2}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whatYouReceive.point3}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whatYouReceive.point4}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.whatYouReceive.point5}</span>
          </li>
        </ul>
        <p class="text-lg text-gray-600 mt-8 text-center italic">
          {content.whatYouReceive.note}
        </p>
      </div>
    </section>

    <!-- Best Fit For -->
    <section class="py-16 px-4 bg-secondary/10">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
          {content.bestFitFor.title}
        </h2>
        <ul class="space-y-4 text-gray-700">
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point1}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point2}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point3}</span>
          </li>
          <li class="flex items-start">
            <span class="text-secondary mr-3 mt-1">·</span>
            <span>{content.bestFitFor.point4}</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- What Happens After -->
    <section class="py-16 px-4 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-center">
          {content.afterAudit.title}
        </h2>
        <p class="text-lg text-gray-600 mb-8 text-center">
          {content.afterAudit.subtitle}
        </p>
        <ol class="space-y-6 text-gray-700">
          <li class="flex items-start">
            <span class="bg-secondary text-white rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">1</span>
            <span class="pt-1">{content.afterAudit.option1}</span>
          </li>
          <li class="flex items-start">
            <span class="bg-secondary text-white rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">2</span>
            <span class="pt-1">{content.afterAudit.option2}</span>
          </li>
          <li class="flex items-start">
            <span class="bg-secondary text-white rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">3</span>
            <span class="pt-1">{content.afterAudit.option3}</span>
          </li>
        </ol>
        <p class="text-lg text-gray-600 mt-8 text-center italic">
          {content.afterAudit.note}
        </p>
      </div>
    </section>

    <!-- Ready CTA -->
    <section class="py-20 px-4 bg-gradient-to-br from-primary to-primaryDark text-white">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          {content.ready.title}
        </h2>
        <p class="text-xl text-secondaryDark/40 mb-8">
          {content.ready.subtitle}
        </p>
        <a
          href={`mailto:hello@aivio.digital?subject=Google Ads Audit Request`}
          class="inline-block bg-white text-secondary font-semibold px-8 py-4 rounded-lg hover:bg-secondary/10 transition-colors text-lg"
        >
          {content.ready.button}
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 100%;
  }
</style>
