---
import { languages, translations } from '../i18n/index';
import { getHeaderMenuItems, getMenuLink } from '../utils/menuItems';

interface Props {
  currentLang: string;
  currentPath?: string;
}

const { currentLang, currentPath = '/' } = Astro.props;
const t = translations[currentLang as keyof typeof translations];
const menuItems = getHeaderMenuItems(currentLang);

const isActive = (href: string) => {
  return currentPath.startsWith(href);
};
---
<div class="bg-secondary text-white py-2">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-end items-center gap-6 text-sm">
    <a href="mailto:hello@aivio.digital" class="flex items-center gap-2 hover:text-secondaryDark/30 transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      hello@aivio.digital
    </a>
    <a href="tel:+15551234567" class="flex items-center gap-2 hover:text-secondaryDark/30 transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      +1 (555) 123-4567
    </a>
  </div>
</div>

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
    <div class="flex justify-between items-center">
      <a href={getMenuLink('', currentLang)} class="flex items-center gap-2 text-2xl font-bold text-secondary hover:text-secondaryDark transition">
        <img src="/assets/logo.png" alt="Aivio Digital" class="h-20 w-auto" />
      </a>

      <!-- Desktop Menu -->
      <ul class="hidden lg:flex items-center gap-1">
        {menuItems.map(item => (
          <li>
            <a
              href={item.href}
              class={`px-3 py-2 rounded-md font-medium text-sm transition ${
                isActive(item.href)
                  ? 'text-secondary bg-secondary/10'
                  : 'text-gray-700 hover:text-secondary hover:bg-secondary/10'
              }`}
            >
              {t.nav[item.key as keyof typeof t.nav]}
            </a>
          </li>
        ))}
      </ul>

      <!-- Desktop Controls -->
      <div class="hidden lg:flex items-center gap-3">
        <div class="flex gap-1 items-center bg-gray-100 rounded-md p-1">
          {Object.entries(languages).map(([code, name]) => (
            <button
              data-lang={code}
              class={`px-3 py-1 rounded text-sm font-medium transition ${
                currentLang === code
                  ? 'bg-white text-secondary shadow-sm'
                  : 'text-gray-600 hover:text-gray-900'
              }`}
              onclick={`switchLanguage('${code}')`}
            >
              {name}
            </button>
          ))}
        </div>

        <a href={getMenuLink('contact', currentLang)} class="bg-secondary text-white font-semibold py-2 px-5 rounded-lg hover:bg-secondaryDark transition text-sm shadow-md hover:shadow-lg">
          {t.nav.getAudit}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 rounded-lg hover:bg-gray-100 transition"
        aria-label="Toggle menu"
        onclick="toggleMobileMenu()"
      >
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="mobile-menu lg:hidden">
      <ul class="flex flex-col gap-2 mt-4">
        {menuItems.map(item => (
          <li>
            <a
              href={item.href}
              class={`block px-4 py-3 rounded-lg font-medium text-sm transition border-l-4 ${
                isActive(item.href)
                  ? 'text-secondary bg-secondary/5 border-secondary'
                  : 'text-gray-700 border-transparent hover:text-secondary hover:bg-gray-50'
              }`}
              onclick="closeMobileMenu()"
            >
              {t.nav[item.key as keyof typeof t.nav]}
            </a>
          </li>
        ))}
      </ul>

      <div class="flex flex-col gap-4 mt-6 pt-6 border-t border-gray-200">
        <div class="flex gap-1 items-center bg-gray-100 rounded-md p-1">
          {Object.entries(languages).map(([code, name]) => (
            <button
              data-lang={code}
              class={`flex-1 px-3 py-2 rounded text-sm font-medium transition ${
                currentLang === code
                  ? 'bg-white text-secondary shadow-sm'
                  : 'text-gray-600 hover:text-gray-900'
              }`}
              onclick={`switchLanguage('${code}'); closeMobileMenu();`}
            >
              {name}
            </button>
          ))}
        </div>

        <a
          href={getMenuLink('contact', currentLang)}
          class="bg-secondary text-white font-semibold py-3 px-5 rounded-lg hover:bg-secondaryDark transition text-sm shadow-md hover:shadow-lg text-center"
          onclick="closeMobileMenu()"
        >
          {t.nav.getAudit}
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile Menu Overlay -->
<div id="mobile-menu-overlay" class="mobile-menu-overlay" onclick="closeMobileMenu()"></div>

<script>
  function switchLanguage(lang: string) {
    localStorage.setItem('lang', lang);
    const newPath = lang === 'en' ? '/' : `/${lang}`;
    window.location.href = newPath;
  }

  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const overlay = document.getElementById('mobile-menu-overlay');
    const body = document.body;

    if (menu && overlay) {
      if (menu.classList.contains('open')) {
        closeMobileMenu();
      } else {
        menu.classList.add('open');
        overlay.classList.add('open');
        body.style.overflow = 'hidden';
      }
    }
  }

  function closeMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const overlay = document.getElementById('mobile-menu-overlay');
    const body = document.body;

    if (menu && overlay) {
      menu.classList.remove('open');
      overlay.classList.remove('open');
      body.style.overflow = '';
    }
  }

  // Expose to window for onclick handlers
  (window as any).switchLanguage = switchLanguage;
  (window as any).toggleMobileMenu = toggleMobileMenu;
  (window as any).closeMobileMenu = closeMobileMenu;
</script>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }

  .mobile-menu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }

  .mobile-menu.open {
    max-height: 500px;
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease-in-out;
    z-index: 40;
  }

  .mobile-menu-overlay.open {
    opacity: 1;
    visibility: visible;
  }
</style>
